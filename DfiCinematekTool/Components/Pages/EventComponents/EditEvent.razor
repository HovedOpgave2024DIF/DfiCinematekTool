@page "/edit-event/{id:int}"
@inject IEventService EventService
@inject NavigationManager Navigation


<PageTitle>
	Edit Event
</PageTitle>


<div class="row justify-content-center">
	<div class="col-6">
		<EventForm IsEditMode="true" EventId="@Id" OnValidEventSubmit="EditExistingEvent"></EventForm>
	</div>
</div>


@code {

	[Parameter]
	public int Id { get; set; }


	private async Task EditExistingEvent(Event eventToEdit)
	{
		await EventService.UpdateEvent(eventToEdit);
		Navigation.NavigateTo("/");
	}
}
