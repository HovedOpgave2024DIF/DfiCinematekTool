<RadzenRow Gap="2rem" Style="display: flex; flex-wrap: nowrap; align-items: center;">
    <AuthorizeView Roles="Programredaktør, Administrator">
        <Authorized>
            <RadzenCheckBox @bind-Value="FilmStatus.HasKey" Style="width: 35px; height: 35px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.OrderDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.ReceivedDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.PreparedDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.CheckedDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenTextArea @bind-Value="FilmStatus.Comment" Style="max-width: 60%; height: 35px; font-size: 0.8rem;" Placeholder="Skriv kommentar" aria-label="Kommentar" />
        </Authorized>

        <NotAuthorized>
            <RadzenCheckBox @bind-Value="FilmStatus.HasKey" Disabled Style="width: 35px; height: 35px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.OrderDate" Disabled DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.ReceivedDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.PreparedDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenDatePicker @bind-Value="FilmStatus.CheckedDate" DateFormat="dd/MM/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

            <RadzenTextArea @bind-Value="FilmStatus.Comment" Style="max-width: 60%; height: 35px; font-size: 0.8rem;" Placeholder="Skriv kommentar" aria-label="Kommentar" />
        </NotAuthorized>
    </AuthorizeView>




    <RadzenButton Click="HandleUpdate" ButtonType="ButtonType.Submit" Icon="update" Shade="Shade.Light" ButtonStyle="ButtonStyle.Secondary" Style="width: 35px; height: 35px;" />
</RadzenRow>

@code {
    [Parameter]
    public FilmStatus FilmStatus { get; set; } = new();

    [Parameter]
    public EventCallback<FilmStatus> OnValidFilmStatusSumbit { get; set; }

    private async Task HandleUpdate() {
        await OnValidFilmStatusSumbit.InvokeAsync(FilmStatus);
    }
}
