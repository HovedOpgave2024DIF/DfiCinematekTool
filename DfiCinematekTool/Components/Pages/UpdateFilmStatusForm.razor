<RadzenRow Gap="2rem" Style="display: flex; flex-wrap: nowrap; align-items: center;">

    <RadzenCheckBox @bind-Value="FilmStatus.HasKey" Style="width: 35px; height: 35px;" />

    <RadzenDatePicker @bind-Value="FilmStatus.ReceivedDate" DateFormat="MM/dd/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

    <RadzenDatePicker @bind-Value="FilmStatus.PreparedDate" DateFormat="MM/dd/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

    <RadzenDatePicker @bind-Value="FilmStatus.CheckedDate" DateFormat="MM/dd/yyyy" Name="DatePickerDateOnlyType" Style="width: 110px; height: 40px;" />

    <RadzenTextArea @bind-Value="FilmStatus.Comment" Style="max-width: 60%; height: 35px;" aria-label="Kommentar" />

    <RadzenButton Click="HandleUpdate" ButtonType="ButtonType.Submit" Icon="update" Shade="Shade.Light" ButtonStyle="ButtonStyle.Secondary" Style="width: 35px; height: 35px;" />

</RadzenRow>


@code {
    [Parameter]
    public FilmStatus FilmStatus { get; set; } = new();

    [Parameter]
    public EventCallback<FilmStatus> OnValidFilmStatusSumbit { get; set; }

    private async Task HandleUpdate() {
        await OnValidFilmStatusSumbit.InvokeAsync(FilmStatus);
    }
}
